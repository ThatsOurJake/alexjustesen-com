---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro'

import ArticleComponent from '../components/ArticleComponent.astro'

const response = await fetch('https://dev.to/api/articles?username=alexjustesen&per_page=1');
const articles = await response.json();
---

<BaseLayout title="Hello, I'm Alex | AlexJustesen.com">
	<div class="w-full max-w-lg mx-auto md:max-w-5xl">
		<div class="grid gap-8 md:grid-cols-5 md:gap-16">
			<div class="md:col-span-3">
				<div class="p-8 space-y-8 bg-white shadow-lg md:px-0 shadow-gray-500/50">
					<div class="text-4xl text-center">🙋‍♂️</div>

					<div class="max-w-xs mx-auto">
						<h1 class="text-3xl font-bold tracking-tight text-center text-gray-700 md:text-4xl">Hello, I'm Alex</h1>

						<p class="mt-2 font-medium text-center text-gray-600 text-md md:text-lg">
							I'm a Business Intelligence Web Engineer at MassMutual by day and a keeper of too many projects by night.
						</p>
					</div>

					<div class="flex items-center justify-center space-x-3">
						<a href="https://github.com/alexjustesen" title="GitHub" rel="noreferrer" target="_blank" class="flex items-center px-3 py-2 text-gray-700 transition duration-300 ease-in-out bg-white border border-gray-600 hover:bg-gray-700 hover:border-gray-800 hover:text-white focus:outline-none focus:shadow-outline-gray">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
							</svg>
						</a>

						<a href="https://twitter.com/alexjustesen" title="Twitter" rel="noreferrer" target="_blank" class="flex items-center px-3 py-2 text-gray-700 transition duration-300 ease-in-out bg-white border border-gray-600 hover:bg-blue-500 hover:border-blue-600 hover:text-white focus:outline-none focus:shadow-outline-blue">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135 -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522 -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c-.002 -.249 1.51 -2.772 1.818 -4.013z" />
							</svg>
						</a>

						<a href="https://dev.to/alexjustesen" title="Dev.to" rel="noreferrer" target="_blank" class="flex items-center px-3 py-2 font-semibold tracking-tighter text-gray-700 transition duration-300 ease-in-out bg-white border border-gray-600 hover:bg-black hover:border-black hover:text-white focus:outline-none focus:shadow-outline-blue">
							DEV
						</a>
					</div>

					<div class="relative">
						<div class="absolute inset-0 flex items-center" aria-hidden="true">
							<div class="w-full border-t border-gray-800"></div>
						</div>

						<div class="relative flex justify-center">
							<span class="px-2 text-gray-500 bg-white">
								📖
							</span>
						</div>
					</div>

					<div class="md:mx-auto md:max-w-md">
						<h2 class="text-lg font-medium tracking-tight text-gray-700">Latest article</h2>
						<ul class="mt-2 space-y-2 text-sm text-gray-800">
							{articles.map(item => (
								<ArticleComponent item={item} />
							))}
						</ul>
					</div>
				</div>
			</div>

			<div class="px-8 pb-8 md:pb-0 md:px-0 md:col-span-2 md:flex md:items-center">
				<div>
					<div>
						<h2 class="text-2xl font-semibold text-white underline md:text-3xl decoration-blue-500">Projects</h2>
						<p class="mt-1 text-base text-gray-100 md:text-md">It seems I'm always working on something, here's a collection of the projects I'm currently focused on.</p>
					</div>

					<div class="mt-4 space-y-2 md:mt-8 md:space-y-4">
						<div class="relative px-4 py-3 bg-white shadow-md md:px-5 md:py-4 shadow-gray-500/50 hover:shadow-blue-500/50">
							<h3 class="text-lg font-semibold tracking-tighter text-gray-700 md:text-xl">🍻 Draught Club</h3>

							<a href="https://draught.club" title="Draught Club" rel="nofollow" target="_blank" class="focus:outline-none">
								<span class="absolute inset-0" aria-hidden="true"></span>
							</a>

							<p class="mt-1 text-sm">
								Organize public and private beer tasting events.
							</p>
						</div>

						<div class="relative px-4 py-3 bg-white shadow-md md:px-5 md:py-4 shadow-gray-500/50 hover:shadow-blue-500/50">
							<h3 class="text-lg font-semibold tracking-tight text-gray-700 md:text-xl">🐇 Speedtest Tracker</h3>

							<a href="https://github.com/alexjustesen/speedtest-tracker" title="Speedtest Tracker" rel="nofollow" target="_blank" class="block focus:outline-none">
								<span class="absolute inset-0" aria-hidden="true"></span>
							</a>

							<p class="mt-1 text-sm">
								Track your internet speed using Ookla's Speedtest service.
							</p>
						</div>

						<div class="relative px-4 py-3 bg-white shadow-md md:px-5 md:py-4 shadow-gray-500/50 hover:shadow-blue-500/50">
							<h3 class="text-lg font-semibold tracking-tight text-gray-700 md:text-xl">🪵 Filament Spatie Activity Log</h3>

							<a href="https://github.com/alexjustesen/filament-spatie-laravel-activitylog" title="Filament Spatie Laravel Activitylog" rel="nofollow" target="_blank" class="block focus:outline-none">
								<span class="absolute inset-0" aria-hidden="true"></span>
							</a>

							<p class="mt-1 text-sm">
								View your Spatie Laravel activity logs inside of Filament.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>

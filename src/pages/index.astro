---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro'

import ArticleComponent from '../components/ArticleComponent.astro'

const response = await fetch('https://dev.to/api/articles?username=alexjustesen&per_page=1');
const articles = await response.json();
---

<BaseLayout title="Hello, I'm Alex | AlexJustesen.com">
	<div class="w-full max-w-lg mx-auto md:max-w-5xl">
		<div class="grid gap-8 md:grid-cols-5 md:gap-16">
			<div class="md:col-span-3">
				<div class="p-8 space-y-8 bg-white shadow-lg md:px-0 shadow-gray-500/50">
					<div class="text-4xl text-center">🙋‍♂️</div>

					<div class="max-w-xs mx-auto">
						<h1 class="text-3xl font-bold tracking-tight text-center text-gray-700 md:text-4xl">Hello, I'm Alex</h1>

						<p class="mt-2 font-medium text-center text-gray-600 text-md md:text-lg">
							I'm a Business Intelligence Web Engineer at MassMutual by day and a keeper of too many projects by night.
						</p>
					</div>

					<div class="flex items-center justify-center space-x-3">
						<a href="https://phpc.social/@alexjustesen" title="Mastodon" rel="me noreferrer" target="_blank" class="flex items-center px-3 py-2 text-gray-700 transition duration-300 ease-in-out bg-white border border-gray-600 hover:bg-[#6364FF] hover:border-[#563ACC] hover:text-white focus:outline-none focus:shadow-outline-gray group">
